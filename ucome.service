usage() {
    echo "Usage: $0 {start|stop}"
}

case "$1" in
    start)
        UCOME='druby://150.69.90.80:9007' /opt/icome7/bin/ucome.rb &
        ;;
    stop)
        kill `ps ax | grep [u]come.rb | awk '{print $1}'`
        ;;
    *)
        usage
        ;;
esac

:
